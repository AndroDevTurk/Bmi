<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" style="@android:style/Theme.Black.NoTitleBar"
        android:fillViewport="false"
        android:background="@drawable/bgframes">

<LinearLayout
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              style="@android:style/Theme.Black.NoTitleBar">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/bmi"
            android:textColor="#0a11ff" android:singleLine="false" android:layout_gravity="center"
            android:layout_margin="10dp" android:textSize="25dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:measureWithLargestChild="false">
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/boy"
                          android:textColor="#0a11ff" android:singleLine="false" android:textSize="20dp"
                          android:layout_gravity="center|left"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textColor="#0a11ff" android:singleLine="false"
                          android:textSize="20dp" android:layout_gravity="center"
                          android:layout_column="2" android:text="  : "/>
                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/Boy" android:textSize="21dp" android:inputType="number"
                          android:longClickable="true" android:minWidth="80dp" android:layout_marginTop="5dp"
                          android:layout_marginLeft="5dp" android:layout_column="3" android:text="0"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textColor="#0a11ff" android:singleLine="false" android:textSize="20dp"
                          android:layout_gravity="center" android:layout_column="2" android:text="cm"
                        />

            </TableRow>
            <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/kilo" android:textColor="#0a11ff" android:singleLine="false"
                          android:textSize="20dp" android:layout_gravity="center|left"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textColor="#0a11ff" android:singleLine="false" android:textSize="20dp"
                          android:layout_gravity="center" android:layout_column="2" android:text="  : "/>
                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/Kilo"
                          android:textSize="21dp" android:inputType="number" android:longClickable="true"
                          android:minWidth="80dp" android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
                          android:layout_column="3" android:text="0"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textColor="#0a11ff" android:singleLine="false" android:textSize="20dp"
                          android:layout_gravity="center" android:layout_column="4" android:text="Kg"
                        />
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/vki"
                          android:textColor="#0a11ff" android:singleLine="false" android:layout_column="0"
                          android:textSize="20dp" android:layout_gravity="center|left"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textColor="#0a11ff" android:singleLine="false" android:textSize="20dp"
                          android:layout_gravity="center" android:layout_column="2" android:text="  : "
                        />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                          android:textColor="#011601" android:singleLine="false" android:id="@+id/Vki" android:textSize="21dp"
                          android:layout_column="3" android:layout_marginLeft="17dp" android:maxWidth="70dp"
                          android:maxLength="4" android:layout_gravity="left"/>
            </TableRow>
        </TableLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imgLed"
                android:layout_marginLeft="5dp" android:background="@drawable/green" android:layout_gravity="center|right"
                />
    </LinearLayout>
    <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/cal"
            android:id="@+id/btnCal" android:layout_gravity="center"
            android:textSize="21dp" android:textColor="#4b9a00" android:layout_margin="5dp"
            android:clickable="false" android:background="@drawable/btn"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginLeft="5dp"
            >
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/siz"
                  android:textColor="#0a11ff" android:singleLine="false" android:layout_gravity="center"
                  android:textSize="18dp" android:layout_margin="5dp" android:layout_marginLeft="10dp"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/siz2"
                  android:textColor="#0a11ff" android:singleLine="false" android:layout_gravity="center"
                  android:textSize="20dp" android:layout_margin="5dp" android:layout_marginLeft="10dp"
                  android:textStyle="bold|italic" android:id="@+id/Siz"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/ideal"
                  android:textColor="#0a11ff" android:singleLine="false" android:layout_gravity="center"
                  android:textSize="18dp" android:layout_margin="5dp" android:layout_marginLeft="10dp"
                />
    </LinearLayout>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp" android:layout_gravity="center"
            android:background="@android:drawable/picture_frame">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_gravity="right">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                      android:textColor="#011601" android:singleLine="false" android:id="@+id/Male"
                      android:textSize="21dp" android:layout_column="1" android:layout_marginLeft="40dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="#0a11ff" android:singleLine="false" android:textSize="20dp"
                      android:layout_gravity="center" android:layout_column="1" android:text="Kg"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                      android:textColor="#011601" android:singleLine="false" android:id="@+id/Female"
                      android:textSize="21dp" android:layout_column="3"
                      android:layout_marginLeft="40dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="#0a11ff" android:singleLine="false" android:textSize="20dp"
                      android:layout_gravity="center" android:layout_column="4" android:text="Kg"
                    />
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="top">
            <ImageView android:layout_width="100dp" android:layout_height="wrap_content"
                       android:id="@+id/imgMale" android:layout_column="1"
                       android:longClickable="false" android:src="@drawable/male1" android:layout_gravity="center_horizontal|top"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgFemale" android:src="@drawable/female1"
                    android:layout_gravity="center_horizontal|top" android:layout_column="3"
                    />
        </TableRow>
    </TableLayout>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/not"
              android:textColor="#0a11ff" android:singleLine="false" android:layout_gravity="center"
              android:textSize="18dp" android:layout_margin="5dp" android:layout_marginLeft="10dp"
              android:id="@+id/textView"/>
</LinearLayout>
</ScrollView>
